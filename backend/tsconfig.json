{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "src/setupTests.ts",
    "src/scripts/**"
  ]
}
