generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Streamer {
  id           String        @id @default(uuid())
  twitchUserId String        @unique
  displayName  String
  avatarUrl    String?
  email        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  channels     Channel[]
  twitchTokens TwitchToken[]

  @@map("streamers")
}

model Viewer {
  id           String                   @id @default(uuid())
  twitchUserId String                   @unique
  displayName  String?
  avatarUrl    String?
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt
  isAnonymized Boolean                  @default(false)
  anonymizedAt DateTime?
  consentedAt  DateTime?
  consentVersion Int?
  twitchTokens TwitchToken[]
  dailyStats   ViewerChannelDailyStat[]

  messages     ViewerChannelMessage[]
  messageAggs  ViewerChannelMessageDailyAgg[]

  @@map("viewers")
}

model Channel {
  id              String                   @id @default(uuid())
  streamerId      String
  twitchChannelId String                   @unique
  channelName     String
  channelUrl      String?
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @updatedAt
  dailyStats      ChannelDailyStat[]
  streamer        Streamer                 @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  streamSessions  StreamSession[]
  viewerStats     ViewerChannelDailyStat[]
  viewerMessages  ViewerChannelMessage[]
  viewerMessageAggs ViewerChannelMessageDailyAgg[]

  @@map("channels")
}

model StreamSession {
  id              String    @id @default(uuid())
  channelId       String
  twitchStreamId  String?   @unique
  startedAt       DateTime
  endedAt         DateTime?
  durationSeconds Int?
  title           String?
  category        String?
  avgViewers      Int?
  peakViewers     Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  channel         Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([channelId, startedAt])
  @@map("stream_sessions")
}

model ChannelDailyStat {
  id            String   @id @default(uuid())
  channelId     String
  date          DateTime
  streamSeconds Int      @default(0)
  streamCount   Int      @default(0)
  avgViewers    Int?
  peakViewers   Int?
  subsTotal     Int?
  subsDelta     Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  channel       Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([channelId, date])
  @@index([channelId, date])
  @@map("channel_daily_stats")
}

model ViewerChannelDailyStat {
  id           String   @id @default(uuid())
  viewerId     String
  channelId    String
  date         DateTime
  watchSeconds Int      @default(0)
  messageCount Int      @default(0)
  emoteCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  channel      Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  viewer       Viewer   @relation(fields: [viewerId], references: [id], onDelete: Cascade)

  @@unique([viewerId, channelId, date])
  @@index([viewerId, channelId, date])
  @@map("viewer_channel_daily_stats")
}

model ViewerChannelMessage {
  id          String   @id @default(uuid())
  viewerId    String
  channelId   String
  messageText String
  messageType String // "CHAT", "SUBSCRIPTION", "CHEER", etc.
  timestamp   DateTime
  badges      String? // JSON string
  emotesUsed  String? // JSON string
  bitsAmount  Int?
  createdAt   DateTime @default(now())

  viewer  Viewer  @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([viewerId, channelId, timestamp])
  @@map("viewer_channel_messages")
}

model ViewerChannelMessageDailyAgg {
  id            String   @id @default(uuid())
  viewerId      String
  channelId     String
  date          DateTime
  totalMessages Int      @default(0)
  chatMessages  Int      @default(0)
  subscriptions Int      @default(0)
  cheers        Int      @default(0)
  giftSubs      Int      @default(0)
  raids         Int      @default(0)
  totalBits     Int?     @default(0)
  updatedAt     DateTime @updatedAt

  viewer  Viewer  @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([viewerId, channelId, date])
  @@index([viewerId])
  @@index([channelId])
  @@map("viewer_channel_message_daily_aggs")
}

model TwitchToken {
  id           String    @id @default(uuid())
  ownerType    String
  streamerId   String?
  viewerId     String?
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  scopes       String    @default("[]")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  viewer       Viewer?   @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  streamer     Streamer? @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@index([ownerType])
  @@map("twitch_tokens")
}

model SystemSetting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

// ========== 分佈式協調表 ==========

model ListenerInstance {
  id            String   @id @default(uuid())
  instanceId    String   @unique
  channelCount  Int      @default(0)
  lastHeartbeat DateTime @default(now())
  startedAt     DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([lastHeartbeat])
  @@map("listener_instances")
}

model ChannelListenerLock {
  id            String   @id @default(uuid())
  channelId     String   @unique
  instanceId    String
  lastHeartbeat DateTime @default(now())
  acquiredAt    DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([instanceId])
  @@index([lastHeartbeat])
  @@map("channel_listener_locks")
}

