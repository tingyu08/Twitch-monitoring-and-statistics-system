generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Streamer {
  id           String        @id @default(uuid())
  twitchUserId String        @unique
  displayName  String
  avatarUrl    String?
  email        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  channels     Channel[]
  twitchTokens TwitchToken[]
  videos       Video[]
  clips        Clip[]

  // Epic 4: 快速操作中心
  settingTemplates      StreamerSettingTemplate[]
  subscriptionSnapshots SubscriptionSnapshot[]
  cheerEvents           CheerEvent[]

  @@map("streamers")
}

model Viewer {
  id           String                   @id @default(uuid())
  twitchUserId String                   @unique
  displayName  String?
  avatarUrl    String?
  tokenVersion Int                      @default(0)  // 用於 Token 失效機制
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt
  isAnonymized Boolean                  @default(false)
  anonymizedAt DateTime?
  consentedAt  DateTime?
  consentVersion Int?
  deletedAt    DateTime?                // Story 2.5: 軟刪除時間戳
  twitchTokens TwitchToken[]
  dailyStats   ViewerChannelDailyStat[]

  messages     ViewerChannelMessage[]
  messageAggs  ViewerChannelMessageDailyAgg[]
  lifetimeStats ViewerChannelLifetimeStats[]
  dashboardLayouts ViewerDashboardLayout[]

  // Story 2.5: Privacy Control Relations
  privacyConsent   ViewerPrivacyConsent?
  deletionRequest  DeletionRequest?
  exportJobs       ExportJob[]

  @@map("viewers")
}

model Channel {
  id              String                   @id @default(uuid())
  streamerId      String?                  // Optional for external channels
  twitchChannelId String                   @unique
  channelName     String
  channelUrl      String?
  isMonitored     Boolean                  @default(true)   // Story 3.6: 是否監控中
  isLive          Boolean                  @default(false)  // New: 直播狀態
  source          String                   @default("platform") // Story 3.6: "platform" | "external"
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @updatedAt
  dailyStats      ChannelDailyStat[]
  streamer        Streamer?                @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  streamSessions  StreamSession[]
  viewerStats     ViewerChannelDailyStat[]
  viewerMessages  ViewerChannelMessage[]
  viewerMessageAggs ViewerChannelMessageDailyAgg[]
  viewerLifetimeStats ViewerChannelLifetimeStats[]
  viewerDashboardLayouts ViewerDashboardLayout[]
  userFollows     UserFollow[]             // Story 3.6: 追蹤此頻道的用戶

  @@map("channels")
}

model StreamSession {
  id              String    @id @default(uuid())
  channelId       String
  twitchStreamId  String?   @unique
  startedAt       DateTime
  endedAt         DateTime?
  durationSeconds Int?
  title           String?
  category        String?
  avgViewers      Int?
  peakViewers     Int?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  channel         Channel   @relation(fields: [channelId], references: [id], onDelete: Cascade)
  metrics         StreamMetric[]

  @@index([channelId, startedAt])
  @@map("stream_sessions")
}

model StreamMetric {
  id              String        @id @default(uuid())
  streamSessionId String
  timestamp       DateTime      @default(now())
  viewerCount     Int           @default(0)
  chatCount       Int?          @default(0)
  
  streamSession   StreamSession @relation(fields: [streamSessionId], references: [id], onDelete: Cascade)

  @@index([streamSessionId, timestamp])
  @@map("stream_metrics")
}

model ChannelDailyStat {
  id            String   @id @default(uuid())
  channelId     String
  date          DateTime
  streamSeconds Int      @default(0)
  streamCount   Int      @default(0)
  avgViewers    Int?
  peakViewers   Int?
  subsTotal     Int?
  subsDelta     Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  channel       Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([channelId, date])
  @@index([channelId, date])
  @@map("channel_daily_stats")
}

model ViewerChannelDailyStat {
  id           String   @id @default(uuid())
  viewerId     String
  channelId    String
  date         DateTime
  watchSeconds Int      @default(0)
  messageCount Int      @default(0)
  emoteCount   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  channel      Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  viewer       Viewer   @relation(fields: [viewerId], references: [id], onDelete: Cascade)

  @@unique([viewerId, channelId, date])
  @@index([viewerId, channelId, date])
  @@map("viewer_channel_daily_stats")
}

model ViewerChannelMessage {
  id          String   @id @default(uuid())
  viewerId    String
  channelId   String
  messageText String
  messageType String // "CHAT", "SUBSCRIPTION", "CHEER", etc.
  timestamp   DateTime
  badges      String? // JSON string
  emotesUsed  String? // JSON string
  bitsAmount  Int?
  createdAt   DateTime @default(now())

  viewer  Viewer  @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([viewerId, channelId, timestamp])
  @@map("viewer_channel_messages")
}

model ViewerChannelMessageDailyAgg {
  id            String   @id @default(uuid())
  viewerId      String
  channelId     String
  date          DateTime
  totalMessages Int      @default(0)
  chatMessages  Int      @default(0)
  subscriptions Int      @default(0)
  cheers        Int      @default(0)
  giftSubs      Int      @default(0)
  raids         Int      @default(0)
  totalBits     Int?     @default(0)
  updatedAt     DateTime @updatedAt

  viewer  Viewer  @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([viewerId, channelId, date])
  @@index([viewerId])
  @@index([channelId])
  @@map("viewer_channel_message_daily_aggs")
}

model TwitchToken {
  id           String    @id @default(uuid())
  ownerType    String
  streamerId   String?
  viewerId     String?
  accessToken  String
  refreshToken String?
  expiresAt    DateTime?
  scopes       String    @default("[]")
  status       String    @default("active") // "active" | "expired" | "revoked" | "invalid"
  lastValidatedAt DateTime?                 // 最後一次驗證成功的時間
  failureCount Int       @default(0)        // 連續驗證失敗次數
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  viewer       Viewer?   @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  streamer     Streamer? @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@index([ownerType])
  @@index([status])
  @@map("twitch_tokens")
}

model SystemSetting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

// ========== 分佈式協調表 ==========

model ListenerInstance {
  id            String   @id @default(uuid())
  instanceId    String   @unique
  channelCount  Int      @default(0)
  lastHeartbeat DateTime @default(now())
  startedAt     DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([lastHeartbeat])
  @@map("listener_instances")
}

model ChannelListenerLock {
  id            String   @id @default(uuid())
  channelId     String   @unique
  instanceId    String
  lastHeartbeat DateTime @default(now())
  acquiredAt    DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([instanceId])
  @@index([lastHeartbeat])
  @@map("channel_listener_locks")
}

// ========== Story 3.6 User Follows ==========

model UserFollow {
  id         String   @id @default(uuid())
  userId     String   // Can be streamerId or viewerId
  userType   String   // "streamer" | "viewer"
  channelId  String
  followedAt DateTime @default(now())
  createdAt  DateTime @default(now())

  channel    Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([userId, channelId])
  @@index([userId])
  @@index([channelId])
  @@map("user_follows")
}

// ========== Story 2.4 Models ==========

model ViewerChannelLifetimeStats {
  id                    String   @id @default(uuid())
  viewerId              String
  channelId             String

  // 觀看統計
  totalWatchTimeMinutes Int      @default(0)
  totalSessions         Int      @default(0)
  avgSessionMinutes     Int      @default(0)
  firstWatchedAt        DateTime?
  lastWatchedAt         DateTime?

  // 留言統計
  totalMessages         Int      @default(0)
  totalChatMessages     Int      @default(0)
  totalSubscriptions    Int      @default(0)
  totalCheers           Int      @default(0)
  totalBits             Int      @default(0)

  // 忠誠度
  trackingStartedAt     DateTime @default(now())
  trackingDays          Int      @default(0)
  longestStreakDays     Int      @default(0)
  currentStreakDays     Int      @default(0)

  // 活躍度
  activeDaysLast30      Int      @default(0)
  activeDaysLast90      Int      @default(0)
  mostActiveMonth       String?  // "YYYY-MM"
  mostActiveMonthCount  Int      @default(0)

  // 排名 (百分位 0.0 - 100.0)
  watchTimePercentile   Float?
  messagePercentile     Float?

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  viewer                Viewer   @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  channel               Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([viewerId, channelId])
  @@index([viewerId])
  @@index([channelId])
  @@map("viewer_channel_lifetime_stats")
}

model ViewerDashboardLayout {
  id        String   @id @default(uuid())
  viewerId  String
  channelId String
  layout    String   // JSON string of grid layout
  updatedAt DateTime @updatedAt

  viewer    Viewer   @relation(fields: [viewerId], references: [id], onDelete: Cascade)
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@unique([viewerId, channelId])
  @@index([viewerId])
  @@map("viewer_dashboard_layouts")
}

// ========== Story 2.5 Privacy Control Models ==========

model ViewerPrivacyConsent {
  id                           String   @id @default(uuid())
  viewerId                     String   @unique
  consentVersion               String   @default("v1.0")
  consentGivenAt               DateTime @default(now())

  // 觀看時數類別
  collectDailyWatchTime        Boolean  @default(true)
  collectWatchTimeDistribution Boolean  @default(true)
  collectMonthlyAggregates     Boolean  @default(true)

  // 留言與互動類別
  collectChatMessages          Boolean  @default(true)
  collectInteractions          Boolean  @default(true)
  collectInteractionFrequency  Boolean  @default(true)

  // 成就與徽章類別
  collectBadgeProgress         Boolean  @default(true)
  collectFootprintData         Boolean  @default(true)

  // 分析與排名類別
  collectRankings              Boolean  @default(true)
  collectRadarAnalysis         Boolean  @default(true)

  updatedAt                    DateTime @updatedAt
  viewer                       Viewer   @relation(fields: [viewerId], references: [id], onDelete: Cascade)

  @@map("viewer_privacy_consents")
}

model DeletionRequest {
  id                    String   @id @default(uuid())
  viewerId              String   @unique
  requestedAt           DateTime @default(now())
  executionScheduledAt  DateTime
  status                String   @default("pending") // "pending", "cancelled", "executed"

  viewer                Viewer   @relation(fields: [viewerId], references: [id], onDelete: Cascade)

  @@index([executionScheduledAt, status])
  @@map("deletion_requests")
}

model ExportJob {
  id           String    @id @default(uuid())
  viewerId     String
  status       String    @default("pending") // "pending", "processing", "completed", "failed"
  downloadPath String?
  expiresAt    DateTime?
  errorMessage String?
  createdAt    DateTime  @default(now())

  viewer       Viewer    @relation(fields: [viewerId], references: [id], onDelete: Cascade)

  @@index([viewerId])
  @@index([expiresAt])
  @@map("export_jobs")
}

model DataRetentionLog {
  id         String   @id @default(uuid())
  viewerId   String
  action     String   // "auto_archive", "auto_delete", "user_delete", "user_cancel"
  reason     String
  executedAt DateTime @default(now())

  @@index([viewerId])
  @@index([executedAt])
  @@map("data_retention_logs")
}

model PrivacyAuditLog {
  id         String   @id @default(uuid())
  viewerId   String
  action     String   // "consent_updated", "data_exported", "account_deleted", "deletion_cancelled"
  details    String   // JSON string
  ipAddress  String?
  userAgent  String?
  timestamp  DateTime @default(now())

  @@index([viewerId])
  @@index([timestamp])
  @@map("privacy_audit_logs")
}


// ========== Story 6.4: VOD & Clips ==========

model Video {
  id              String   @id @default(uuid())
  twitchVideoId   String   @unique
  streamerId      String
  title           String
  description     String?
  url             String
  thumbnailUrl    String?
  viewCount       Int
  duration        String
  language        String?
  type            String   // 'upload', 'archive', 'highlight'
  createdAt       DateTime // Video creation time on Twitch
  publishedAt     DateTime // When it was published
  scrapedAt       DateTime @default(now())

  streamer        Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@index([streamerId])
  @@index([createdAt])
  @@map("videos")
}

model Clip {
  id              String   @id @default(uuid())
  twitchClipId    String   @unique
  streamerId      String   // Broadcaster
  creatorId       String?  // Who created the clip
  creatorName     String?  // Store name for display
  videoId         String?  // Source video ID if available
  gameId          String?
  title           String
  url             String
  embedUrl        String?
  thumbnailUrl    String?
  viewCount       Int
  duration        Float    // Seconds
  createdAt       DateTime // Clip creation time
  scrapedAt       DateTime @default(now())

  streamer        Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@index([streamerId])
  @@index([createdAt])
  @@index([viewCount])
  @@map("clips")
}


// ========== Epic 4: Streamer Quick Actions ==========

model StreamerSettingTemplate {
  id           String   @id @default(uuid())
  streamerId   String
  templateName String
  title        String?
  gameId       String?
  gameName     String?
  tags         String?  // JSON array
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  streamer     Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@index([streamerId])
  @@map("streamer_setting_templates")
}

model SubscriptionSnapshot {
  id               String   @id @default(uuid())
  streamerId       String
  snapshotDate     DateTime
  tier1Count       Int      @default(0)
  tier2Count       Int      @default(0)
  tier3Count       Int      @default(0)
  totalSubscribers Int      @default(0)
  estimatedRevenue Float?
  createdAt        DateTime @default(now())

  streamer         Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@unique([streamerId, snapshotDate])
  @@index([streamerId])
  @@map("subscription_snapshots")
}

model CheerEvent {
  id           String   @id @default(uuid())
  streamerId   String
  twitchUserId String?
  userName     String?
  bits         Int
  message      String?
  isAnonymous  Boolean  @default(false)
  cheeredAt    DateTime
  createdAt    DateTime @default(now())

  streamer     Streamer @relation(fields: [streamerId], references: [id], onDelete: Cascade)

  @@index([streamerId, cheeredAt])
  @@map("cheer_events")
}
