# Test Environment Configuration
# Copy this file to .env.test for local testing

# Environment
NODE_ENV=test

# API Configuration
API_BASE_URL=http://localhost:4000

# Database (use a separate test database)
DATABASE_URL="file:./test.db"

# JWT Configuration (use test-specific secret)
APP_JWT_SECRET=test-secret-key-do-not-use-in-production

# Twitch OAuth (optional for integration tests)
TWITCH_CLIENT_ID=your-test-client-id
TWITCH_CLIENT_SECRET=your-test-client-secret
TWITCH_REDIRECT_URI=http://localhost:4000/auth/twitch/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Server Port
PORT=4000

# Test Configuration
TEST_TIMEOUT=5000
